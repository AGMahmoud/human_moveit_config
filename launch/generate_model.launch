<launch>
    <arg name="kinect_ip" default="FLOWERS-DELL-1.local" /> <!-- IP of the VRPN server (like Motive or Arena) -->
    <arg name="kinect_port" default="3883" /> <!-- Port of the kinect VRPN server (default 3883) -->
    <arg name="opt_ip" default="BAXTERFLOWERS.local" /> <!-- IP of the VRPN server (like Motive or Arena) -->
    <arg name="opt_port" default="3884" /> <!-- Port of the optitrack VRPN server (default 3884) -->
    <arg name="name" default="human" />
    <arg name="use_timer" default="True" />
    <param name="human/person_name" type="string" value="$(arg name)" />

    <rosparam command="load" file="$(find human_moveit_config)/config/tracked_objects.yaml" param="optitrack/objects"/>
    
    <include file="$(find kinect_skeleton_publisher)/launch/kinect_skeleton_publisher.launch" >
      <arg name="ip" value="$(arg kinect_ip)"/> <!-- IP of the VRPN server (like Motive or Arena) -->
      <arg name="port" value="$(arg kinect_port)"/> <!-- Port of the VRPN server (default 3883) -->
      <arg name="num_skeletons" value="1"/>
    </include>

    <node name="human_calibration" pkg="human_moveit_config" type="generate_model" output="screen" args="$(arg use_timer)" required="true"/>

    <include file="$(find optitrack_publisher)/launch/optitrack_publisher.launch" >
      <arg name="ip" value="$(arg opt_ip)"/> <!-- IP of the VRPN server (like Motive or Arena) -->
      <arg name="port" value="$(arg opt_port)"/> <!-- Port of the VRPN server (default 3883) -->
      <arg name="output" value="log"/>
   </include>
</launch>
